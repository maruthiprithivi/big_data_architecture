# ========================================
# Blockchain Data Ingestion Configuration
# ========================================

# ClickHouse Configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=clickhouse_password
CLICKHOUSE_DB=blockchain_data

# RPC Endpoints
# Ethereum - Future Development (requires paid API key)
# Free public Ethereum endpoints are unreliable for educational use
# To enable: Get free API key from https://infura.io or https://alchemy.com
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY_HERE
ETHEREUM_ENABLED=false

# Bitcoin - Public RPC
BITCOIN_RPC_URL=https://blockstream.info/api
BITCOIN_ENABLED=true

# Solana - Public RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_ENABLED=true

# Data Collection Settings
COLLECTION_INTERVAL_SECONDS=5
BATCH_SIZE=10

# Safety Limits (Safeguards for teaching environment)
MAX_COLLECTION_TIME_MINUTES=10
MAX_DATA_SIZE_GB=5

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Streamlit Configuration
STREAMLIT_PORT=8501
